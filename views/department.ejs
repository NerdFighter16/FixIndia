<%- include('partials/header') %>

<div class="row g-0">
    <div class="col-lg-8">
        <div id="map"></div>
    </div>
    <div class="col-lg-4">
        <div class="issue-list-container">
            <h4 class="mb-0">Issues: <%= departmentName %></h4>
            <hr>
            <form id="filter-form" class="mb-3">
                <div class="input-group mb-2">
                     <input type="text" name="search" class="form-control" placeholder="Search within department...">
                </div>
                <div class="d-flex justify-content-between">
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Resolved">Resolved</option>
                    </select>
                </div>
                 <button type="submit" class="btn btn-primary w-100 mt-2">Apply Filters</button>
            </form>
            <div id="issue-list">
                </div>
        </div>
    </div>
</div>

<input type="hidden" id="department-name" value="<%= departmentName %>">

<%- include('partials/footer') %>